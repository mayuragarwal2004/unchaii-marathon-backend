generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id
  name          String
  gotra         String?
  gender        String
  birthdate     DateTime
  age           Int
  phoneNumber   String   @default("")
  tshirtSize    String
  distance      String
  isBibGiven    Boolean  @default(false)
  isTshirtGiven Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Admin {
  id       String @id @default(uuid())
  username String @unique
  password String
}
